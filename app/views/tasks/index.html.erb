<h1>Tasks 😝</h1>
<ul>
  <% @tasks.each do |task| %>
    <li style="list-style: none"> 
    <% if task.completed %>
    <i class="fa fa-check-square"></i>
    <% else %>
    <i class="fa fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to '<i class="fa fa-trash"></i>'.html_safe, task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>    
    </li>
  <% end %>
</ul>

<h4> <%= link_to "Create a new task", new_task_path %> </h4>